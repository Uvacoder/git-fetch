.repository
  width 100%
  box-shadow $shadow
  border-radius rem(10)
  overflow hidden
  transition box-shadow 0.2s ease-out, transform 0.1s ease-in

  &:hover
    box-shadow $elevation
    transform translate(-5px, -5px)

  &__title
  &__author
    padding rem(15)
    transition background 0.1s ease

    &:hover
      background-color $quaternary

  &__title
    display block

  &__numbers
    display flex
    align-items center

    &__item
      display flex
      align-items center
      margin rem(15)
      text-transform uppercase

    .button
      margin-right rem(10)

  &__language
    padding rem(15)

  &__author
    display flex
    align-items center

    &__image
      width 30px
      height 30px
      margin-right rem(15)

      img
        width 100%
        height 100%
        border-radius 50%
        object-fit cover