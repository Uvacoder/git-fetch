.placeholder
  display block

  &--inline
    display inline-block

  &__wrapper
    width 100%
    height 100%

  &__item
    position relative
    background-color $quaternary
    border-radius rem(10)
    overflow hidden

    &--image
      border-radius 50%

    &--line
      margin rem(5 0)

      &:nth-child(4n + 1)
        width 90%

      &:nth-child(4n + 2)
        width: 100%

      &:nth-child(4n + 3)
        width: 85%

    &:before
      content ''
      width 100vw
      height 100%
      max-width 1100px
      position absolute
      top 0
      left 100%
      background linear-gradient(to right, transparent 0%, $terciary 15%, transparent 30%)
      transform translate3d(-50%, 0, 0)
      animation placeholder 1.5s linear infinite forwards