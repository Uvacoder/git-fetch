.profile
  display flex
  align-items center
  position relative
  box-shadow $elevation
  border-radius rem(30)
  white-space nowrap
  +below(m)
    padding rem(5)

  &__link
    margin-left auto

  &__info
    margin rem(15)
    text-align right
    +below(m)
      display none

    &__email
      font-size rem(12)
      font-weight 100

  &__image
    width 65px
    height 65px
    display inline-block
    position relative
    margin-right rem(-5)
    overflow hidden
    +below(m)
      width 50px
      height 50px
      margin-right 0

    img
      width 100%
      height 100%
      border-radius 50%
      object-fit cover

    &__overlay
      width 100%
      height 100%
      display flex
      align-items center
      justify-content center
      position absolute
      top 0
      left 0
      background-color rgba($primary, 0.8)
      opacity 0
      transition opacity 0.1s ease-out
      overflow hidden

      svg
        font-size rem(30)
        opacity 0
        transform scale(0.4)
        transition opacity 0.1s ease-in 0.1s, transform 0.1s ease-out 0.1s

      ~/:hover &
        opacity 1

        svg
          opacity 1
          transform scale(1)