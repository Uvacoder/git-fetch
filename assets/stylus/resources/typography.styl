h1
  font-size rem(46)
  +below(m)
    font-size rem(34)

  &:not(.title)
    margin-bottom rem(5)

  &.title
    display inline-block
    font-size rem(22)
    text-transform uppercase

h2
  font-size rem(50)

h3
  font-size rem(44)
  font-weight 300

h4
  font-size rem(20)
  font-weight 100

h5
  @extend .roboto
  font-size rem(22)

p
  font-size rem(16)

small
  @extend .roboto
  font-size rem(14)
  font-weight 400

strong
  vertical-align baseline
  color $green