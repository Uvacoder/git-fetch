*
*:before
*:after
  padding 0
  margin 0
  vertical-align middle
  border 0
  outline 0
  font inherit
  color inherit
  box-sizing border-box

article
aside
details
figcaption
figure
footer
header
hgroup
menu
nav
section 
  display block

html
body
  min-width 100%
  min-height 100%

body
  padding rem(30 0)
  background-color $primary
  @extend .montserrat
  font-size rem(16)
  color $black

.container
  width 100%
  max-width 1100px
  padding rem(0 25)
  margin auto

a
button
  background-color transparent
  user-select none

a
  text-decoration none

ul
ol
  list-style none

img
  width 100%
  height 100%
  object-fit cover

.card
  padding rem(15)
  box-shadow $shadow
  border-radius rem(10)

.icon
  width 40px
  height 40px
  display inline-flex
  align-items center
  justify-content center
  margin-right rem(10)
  box-shadow $elevation
  border-radius 50%